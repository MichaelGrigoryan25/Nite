<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_margin="@dimen/_10sdp"
    android:id="@+id/noteContainer"
    android:focusable="true"
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/_20sdp"
    android:paddingTop="@dimen/_20sdp"
    android:background="?cardBackground"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/heading"
        android:fontFamily="@font/ubuntubold"
        android:text="Heading"
        style="?cardTextHeading"
        android:textSize="@dimen/_20sdp"
        android:layout_gravity="top|start"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/content"
        android:fontFamily="@font/ubuntumedium"
        android:text="Note Contents"
        style="?cardTextContent"
        android:layout_gravity="start"
        android:textSize="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/datefield"
        android:fontFamily="@font/ubunturegular"
        android:text="Date field"
        style="?cardTextDate"
        android:layout_gravity="start"
        android:textSize="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_65sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>